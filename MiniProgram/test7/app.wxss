/*按钮样式*/

button {
  background-color: #ff2d55;
  color: white;
  margin: 20rpx;
}

/*标签样式*/

label {
  color: #ff2d55;
  margin-right: 25rpx;
}

/*文本样式*/

text {
  margin-right: 25rpx;
}

/*条目盒子*/

.box {
  border-bottom: 1rpx solid silver;
  margin: 10rpx 20rpx;
  padding: 10rpx;
}

/*水平布局*/

.row {
  display: flex;
  flex-direction: row;
}

/*垂直布局*/

.col {
  display: flex;
  flex-direction: column;
}
